@model List<Order>
@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card mb-4 mt-2">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>@ViewData["Title"]</h3>
            <a class="btn btn-success" asp-action="Create" asp-controller="Order">New Order</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>OrderStatus</th>
                    <th>CustomerId</th>
                    <th>CustomerName</th>
                    <th>DeliveredDate</th>
                    <th>OrderPrice</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.OrderStatus</td>
                            <td>@order.CustomerId</td>
                            <td>@order.CustomerName</td>
                            <td>@order.DeliveredDate</td>
                            <td>@order.OrderPrice</td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="Update" asp-asp-controller="Order" asp-route-id="@order.Id">Update</a>
                                |
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-asp-controller="Order" asp-route-id="@order.Id">Delete</a>
                                |
                                <a class="btn btn-sm btn-info" href="#">Order Details</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
