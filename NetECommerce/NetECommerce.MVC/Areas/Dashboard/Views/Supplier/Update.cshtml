@model Supplier
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card mt-2 mb-4">
    <div class="card-header">
        <h3>Update Supplier</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Supplier" method="post">

            <div class="mb-2">
                <label>Company Name</label>
                <input type="text" class="form-control" asp-for="CompanyName" />
            </div>

            <div class="mb-2">
                <label>ContactTitle</label>
                <input type="text" class="form-control" asp-for="ContactTitle" />
            </div>

            <div class="mb-2">
                <label>ContactNumber</label>
                <input type="tel" class="form-control" asp-for="ContactNumber" />
            </div>

            <div class="mb-2">
                <label>Address</label>
                <input type="text" class="form-control" asp-for="Address" />
            </div>

            <div class="mb-2">
                <label>City</label>
                <input type="text" class="form-control" asp-for="City" />
            </div>

            <div class="mb-2">
                <label>Region</label>
                <input type="text" class="form-control" asp-for="Region" />
            </div>

            <div class="mb-2">
                <label>PostalCode</label>
                <input type="text" class="form-control" asp-for="PostalCode" />
            </div>

            <div class="mb-2">
                <label>Country</label>
                <input type="text" class="form-control" asp-for="Country" />
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


